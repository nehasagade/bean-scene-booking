@model IEnumerable<BeanSceneApp.Models.AvailableTable>
@{
    ViewData["Title"] = "Index";
}

<h1>Available Tables</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AreaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TableNum)
            </th>            
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @String.Format("{0: ddd dd/MM/yyyy}", item.Date)
            </td>
            <td>
                 @String.Format("{0:hh\\:mm}", item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AreaId)
            </td>
            <td>
                @Html.DisplayFor(model => item.TableNum)
            </td>
        </tr>
}
    </tbody>
</table>

