@model BeanSceneApp.Models.Availability

@{
    ViewData["Title"] = "Delete Sitting";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this sitting?<br />This may delete bookings!</h3>
<div>
    <h4>Sitting</h4>
    <hr />
    <dl class="row">
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @String.Format("{0: ddd dd/MM/yyyy}", Model.Date)
        </dd>
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SittingType)
        </dt>
        <dd class = "col-sm-10">
            @Model.SittingType
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>
        <dd class = "col-sm-10">
            @Model.StartTime
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TablesAvailable)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TablesAvailable)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaxCapacity)
        </dt>
         <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxCapacity)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> 
       <a type="button" class="btn btn-primary my-1" href="@Url.Action("Index")">
            <span>Back</span>
       </a>
    </form>
</div>
