@model BeanSceneApp.Models.Table

@{
    ViewData["Title"] = "Create Table";
}

<h1>Create Table</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-1">
                <label asp-for="AreaId" class="control-label fw-bold"></label>
                <select asp-for="AreaId" style="border: solid 2px #083944" class ="form-control" asp-items="ViewBag.AreaId"></select>
            </div>
            <div class="form-group my-1">
                <label asp-for="TableNum" class="control-label fw-bold"></label>
                <input asp-for="TableNum" style="border: solid 2px #083944" class="form-control" />
                <span asp-validation-for="TableNum" class="text-danger"></span>
            </div>

            <div class="form-group my-1">
                <label asp-for="Note" class="control-label fw-bold"></label>
                <input asp-for="Note" style="border: solid 2px #083944" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a type="button" class="btn btn-primary" href="@Url.Action("Index")">
                    <span>Back</span>
                </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}