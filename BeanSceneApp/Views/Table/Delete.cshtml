@model BeanSceneApp.Models.Table

@{
    ViewData["Title"] = "Delete Table";
}

<h1>Delete Table @Model.TableName?</h1>
<p>Are you sure you want to delete this?<br />This action is irreversible.</p>
<div>
    <h4>Table @Model.TableName</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Note)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Note)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AreaId" />
        <input type="hidden" asp-for="TableNum" />
        <input type="submit" value="Delete" class="btn btn-danger my-2" />
        <a type="button" class="btn btn-primary my-1" href="@Url.Action("Index")">
            <span>Back</span>
        </a>
    </form>
    
</div>
