@model IEnumerable<BeanSceneApp.Models.Table>

@{
    ViewData["Title"] = "Tables";
}

<h1>Tables</h1>

<p>
    <a type="button" class="btn btn-primary mb-3" href="@Url.Action("Create")">
        <span class="glyphicon glyphicon-plus"></span>
        <span>New</span>
    </a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TableName)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Area.Name)
            </td>
            <td>
                @Html.DisplayFor(model => item.TableName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            
            <td>
                @Html.Partial("_TableButtonPartial", new IndividualButtonPartial{AreaId = item.AreaId, TableNum = item.TableNum})
            </td>
        </tr>
}
    </tbody>
</table>
